  </thead>

  <tbody>
    <% @property_drinking_waters.each do |property_drinking_water| %>
      <tr>
        <td><%= property_drinking_water.drinking_water %></td>
        <td><%= property_drinking_water.property %></td>
        <td><%= link_to 'Show', property_drinking_water %></td>
        <td><%= link_to 'Edit', edit_property_drinking_water_path(property_drinking_water) %></td>
        <td><%= link_to 'Destroy', property_drinking_water, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

