<p id="notice"><%= notice %></p>

<h1>Drinking Waters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinking_waters.each do |drinking_water| %>
      <tr>
        <td><%= drinking_water.name %></td>
        <td><%= drinking_water.value %></td>
        <td><%= link_to 'Show', drinking_water %></td>
        <td><%= link_to 'Edit', edit_drinking_water_path(drinking_water) %></td>
        <td><%= link_to 'Destroy', drinking_water, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

