<p id="notice"><%= notice %></p>

<h1>Assessments</h1>

<table>
  <thead>
    <tr>
      <th>Number assesment</th>
      <th>State</th>
      <th>Location</th>
      <th>Inhabited</th>
      <th>Habitant</th>
      <th>Client</th>
      <th>Owner</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.number_assesment %></td>
        <td><%= assessment.state %></td>
        <td><%= assessment.location %></td>
        <td><%= assessment.inhabited %></td>
        <td><%= assessment.habitant %></td>
        <td><%= assessment.client %></td>
        <td><%= assessment.owner %></td>
        <td><%= assessment.start_date %></td>
        <td><%= assessment.end_date %></td>
        <td><%= link_to 'Show', assessment %></td>
        <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
        <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

