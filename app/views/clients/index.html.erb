<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Numero de contacto</th>
      <th>Disponible</th>
      <th>Tipo Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.contact %></td>
        <td><%= client.number %></td>
        <td><%= client.available %></td>
        <td><%= client.client_type %></td>
        <td><%= link_to 'Detalles', client %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Seguro que desea eliminar el cliente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_client_path %>
