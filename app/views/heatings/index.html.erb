<p id="notice"><%= notice %></p>

<h1>Heatings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heatings.each do |heating| %>
      <tr>
        <td><%= heating.name %></td>
        <td><%= heating.value %></td>
        <td><%= link_to 'Show', heating %></td>
        <td><%= link_to 'Edit', edit_heating_path(heating) %></td>
        <td><%= link_to 'Destroy', heating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Heating', new_heating_path %>
