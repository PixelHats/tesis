<p id="notice"><%= notice %></p>

<h1>Propiedades</h1>

<table>
  <thead>
    <tr>
      <th>Deudas tributarias</th>
      <th>Antiguedad</th>
      <th>Expropriación</th>
      <th>Solera</th>
      <th>Tasación</th>
      <th>Instalaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td>$ <%= property.debt_taxation %></td>
        <td><%= property.antiquity %></td>
        <td><%= property.expropriation %></td>
        <td><%= property.sill %></td>
        <td><%= property.assessment.number_assesment %></td>
        <td><%= property.facilities %></td>
        <td><%= link_to 'Detalles', property %></td>
        <td><%= link_to 'Editar', edit_property_path(property) %></td>
        <td><%= link_to 'Eliminar', property, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

